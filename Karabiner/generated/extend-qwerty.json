{
  "title": "QWERTY Extend (DreymaR version, Python Generated)",
  "rules": [
    {
      "description": "Extend Mode [Caps Lock as Trigger Key]",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "set_variable": {
                "name": "extend_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
